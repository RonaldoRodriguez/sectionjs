{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": ["DOM", "ES6"],
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"]
}